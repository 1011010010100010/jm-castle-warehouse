{
  "system": {
    "name": "castle-warehouse",
    "host": "xxx",
    "port": 53002,
    "certs": {
      "ca": "castle-warehouse/castle-warehouse-cert/optional-your-ca-cert.pem",
      "hostCert": "castle-warehouse/castle-warehouse-cert/your-host.crt",
      "hostKey": "castle-warehouse/castle-warehouse-cert/your-host.key"
    },
    "client": {
      "path": "./castle-warehouse/node_modules/jm-castle-warehouse-client/build"
    }
  },
  "client": {
    "a-special-client": {
      "id": "a-special-client",
      "ip": ["::ffff:000\\.000\\.000.*"],
      "user": "castle"
    }
  },
  "user": {
    "castle": {
      "password": "castle",
      "roles": ["admin", "external", "internal"]
    },
    "admin": {
      "password": "castle",
      "roles": ["admin"]
    },
    "internal": {
      "password": "castle",
      "roles": ["external", "internal"]
    },
    "external": {
      "password": "castle",
      "roles": ["external"]
    }
  },
  "persistence": {
    "serverPersistence": {
      "type": "maria-db",
      "isDefault": true,
      "database": "castle_warehouse",
      "host": "xxx",
      "port": 3306,
      "user": "root",
      "password": "xxx"
    }
  },
  "imageStore": {
    "type": "file-system",
    "path": "c:/castle-live/castle-warehouse-imagestore",
    "maxWidth": 400,
    "maxHeight": 400
  },
  "mail": {
    "defaultSender": {
      "type": "smtp",
      "isDefault": true,
      "host": "mail.gmx.net",
      "port": 465,
      "user": "xxx",
      "password": "xxx",
      "defaultReceivers": [{ "address": "xxx" }]
    }
  }
}
